<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<% if output = no_posts_or_comments? %>
  <%= output %>
<% else %>
  <h2>Posts</h2>
  <%= render @user.posts %>

  <h2>Comments</h2>
  <%= render @user.comments %>
<% end %>

<div class="media">
  <h2> Favorited Posts</h2>
  <% @user.posts.each do |post| %>
    <% if current_user.favorite_for(post) %>
      <div>
        <%= render partial: 'votes/voting', locals: { post: post } %>
      </div>
      <div class="post-title col-md-4">
        <h4>
          <%= link_to post.title, topic_post_path(post.topic, post) %>
        </h4>
      </div>
      <div class="user-info col-md-4">
        <div class="vert-align pull-left">
            <!-- <% user = User.find(post.user_id) %> -->
            <%= image_tag User.find(post.user_id).avatar_url(48), class: "gravatar" %>
        </div>
        <div class="vert-align-mid pull-left">
          <small>
            <%= post.votes.count %> Votes <br>
            <%= post.comments.count %> Comments
          </small>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
